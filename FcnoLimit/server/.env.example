# ========================================
# FCnoLimit Backend - Variables de Entorno
# ========================================

# Configuración del Servidor
NODE_ENV=development
PORT=3001

# Configuración CORS
CORS_ORIGIN=http://localhost:5000,http://localhost:8100,https://fcnolimit.firebaseapp.com,https://fcnolimit.web.app

# Configuración de PostgreSQL en Render
# Opción 1: Usar DATABASE_URL (recomendado para Render)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Opción 2: Usar variables individuales (alternativa)
DB_HOST=your-render-hostname.postgres.render.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# Configuración del Pool de Conexiones
DB_POOL_SIZE=20

# Configuración JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Configuración de archivos
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# Configuración de logs
LOG_LEVEL=info

# ========================================
# Instrucciones para Render:
# ========================================
# 1. En Render, ve a tu servicio > Environment
# 2. Agrega las variables necesarias
# 3. La variable DATABASE_URL se genera automáticamente cuando conectas una base de datos
# 4. NODE_ENV se debe configurar como "production" en Render
# ========================================
